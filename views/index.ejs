<head>
    <style>
        .table {
            display: grid;
            gap: 1rem;
            grid-auto-flow: column;
        }

        .required label:after {
            content:" *";
            color: red;
        }
    </style>
</head>
<body>
    <form action="/data/add" method="POST">
        <div class="table">
            <input type="text" placeholder="Autor" name="autor"><br><br>
            <input type="text" placeholder="Název" name="nazev" required><br><br>
            <input type="year" placeholder="Rok vydání" name="rok"><br><br>
            <input type="text" placeholder="Nakladatel" name="nakladatel"><br><br>
            <input type="text" placeholder="Místo vydání" name="mistoVydani"><br><br>
            <input type="text" placeholder="Signatura" name="signatura"><br><br>
            <input type="number" placeholder="ISXN" name="isxn"><br><br>
            <select name="id" class="required">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="G">G</option>
                <option value="H">H</option>
                <option value="I">I</option>
                <option value="J">J</option>
                <option value="K">K</option>
                <option value="U">U</option>
            </select>
             
            <button>Submit</button>
        </div>    
    </form>
</body>